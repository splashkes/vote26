# Slack MCP Server Configuration
# Get these from https://api.slack.com/apps

# Option 1: Official Slack MCP Server (Bot Token)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_TEAM_ID=T01234567
SLACK_CHANNEL_IDS=C01234567,C76543210

# Option 2: Community Slack MCP Server (Browser Tokens)
# Get from browser dev tools → Application → Cookies
SLACK_MCP_XOXC_TOKEN=xoxc-your-browser-token
SLACK_MCP_XOXD_TOKEN=xoxd-your-cookie-value
SLACK_MCP_ADD_MESSAGE_TOOL=true
SLACK_MCP_LOG_LEVEL=info

# Cloudflare MCP Servers Configuration
# Get from https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=cf_your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# Optional: Cloudflare Zone ID (for DNS operations)
CLOUDFLARE_ZONE_ID=your_zone_id_here
